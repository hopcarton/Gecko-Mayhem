{
  "manifest_version": 3,
  "name": "Shipper Ơi! hàng rơi rồi.",
  "version": "1.0",
  "description": "Ôi đơn hàng! Nhặt các hộp bị rơi và ném chúng trở lại xe Hupuna. Nhanh tay lên, màn hình của bạn sẽ ngập trong hộp!",
  "homepage_url": "https://hupuna.com",
  "action": {
    "default_icon": "shipCod.png"
  },
  "icons": {
    "128": "shipCod.png"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "ship.png",
        "shipCod.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": []
}
